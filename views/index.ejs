<%- include('partials/header') %>
<title>To-Do List</title>
</head>
<body>

<div class="box" id="heading">
  <h1> <%=kindOfDay%> </h1>
</div>

<div class="box">
  <% newListItems.forEach(function(newITem){ %>
    <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name="checkbox" value="<%=newITem.id%>" onchange="this.form.submit()">
      <p> <%= newITem.name %> </p>
    </div>
    <input type="hidden" name="customList" value="<%=kindOfDay%>"></input>
  </form>
  <% }); %>


  <form class="item" action="/" method="post">
    <input type="text" name="new_item" placeholder="New Item" autocomplete="off">
    <button type="submit" name="button" value="<%=kindOfDay%>" >+</button>
  </form>

</div>
<%- include('partials/footer') %>